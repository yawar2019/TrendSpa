@model CodeFirstApproach.Models.LibraryModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="~/Library/Edit" method="post">
    <input type="hidden" name="BookId" value="@Model.BookId" /><br />

    <label>
        BookName
    </label>
    <input type="text" name="BookName" value="@Model.BookName" /><br />
    <label>
        Price
    </label>
    <input type="text" name="Price" value="@Model.Price"  /><br />
    <input type="submit" value="Save" />
</form>